doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
     a(href="/",style="font-size: 2rem") Home 
     div(style="display: grid; grid-template-columns: repeat(4,1fr);gap: 3rem; margin-top:3rem" )
       each image in images
         div
           img(style="width: 100%; height: 20rem;object-fit: cover; " src=`${image.url}`, alt=`${image.path}`)
           form(action=`deleteImages/${image._id}`, method="post")
            button Delete 